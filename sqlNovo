SET @OLD_UNIQUE_CHECKS=@@UNIQUE_CHECKS, UNIQUE_CHECKS=0;
SET @OLD_FOREIGN_KEY_CHECKS=@@FOREIGN_KEY_CHECKS, FOREIGN_KEY_CHECKS=0;
SET @OLD_SQL_MODE=@@SQL_MODE, SQL_MODE='ONLY_FULL_GROUP_BY,STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION';

CREATE DATABASE IF NOT EXISTS artwitterBD;
USE artwitterBD;

DROP TABLE IF EXISTS listSeguido;
DROP TABLE IF EXISTS comentario;
DROP TABLE IF EXISTS post;
DROP TABLE IF EXISTS perfil;
DROP TABLE IF EXISTS usuario;

CREATE TABLE usuario (
  id INT NOT NULL AUTO_INCREMENT,
  nome VARCHAR(255) NOT NULL,
  email VARCHAR(255) NOT NULL,
  senha VARCHAR(255) NOT NULL,
  PRIMARY KEY (id),
  UNIQUE INDEX id_UNIQUE (id ASC) VISIBLE,
  UNIQUE INDEX nome_UNIQUE (nome ASC) VISIBLE
) ENGINE=InnoDB;

CREATE TABLE perfil (
  usuario_id INT NOT NULL,
  descricao TEXT(500) NULL,
  foto VARCHAR(255) NULL,
  PRIMARY KEY (usuario_id),
  INDEX fk_perfil_usuario_idx (usuario_id ASC) VISIBLE,
  CONSTRAINT fk_perfil_usuario
    FOREIGN KEY (usuario_id)
    REFERENCES usuario (id)
    ON DELETE CASCADE
    ON UPDATE CASCADE
) ENGINE=InnoDB;

CREATE TABLE post (
  id INT NOT NULL AUTO_INCREMENT,
  imagemURL VARCHAR(255) NOT NULL,
  descricao TEXT(500) NULL,
  likes INT NULL,
  perfil_usuario_id INT NOT NULL,
  PRIMARY KEY (id),
  UNIQUE INDEX idPost_UNIQUE (id ASC) VISIBLE,
  INDEX fk_post_perfil1_idx (perfil_usuario_id ASC) VISIBLE,
  CONSTRAINT fk_post_perfil1
    FOREIGN KEY (perfil_usuario_id)
    REFERENCES perfil (usuario_id)
    ON DELETE CASCADE
    ON UPDATE CASCADE
) ENGINE=InnoDB;

CREATE TABLE comentario (
  id INT NOT NULL AUTO_INCREMENT,
  texto TEXT(500) NOT NULL,
  perfil_usuario_id INT NOT NULL,
  post_idPost INT NOT NULL,
  PRIMARY KEY (id),
  UNIQUE INDEX idComentario_UNIQUE (id ASC) VISIBLE,
  INDEX fk_comentario_perfil1_idx (perfil_usuario_id ASC) VISIBLE,
  INDEX fk_comentario_post1_idx (post_idPost ASC) VISIBLE,
  CONSTRAINT fk_comentario_perfil1
    FOREIGN KEY (perfil_usuario_id)
    REFERENCES perfil (usuario_id)
    ON DELETE CASCADE
    ON UPDATE CASCADE,
  CONSTRAINT fk_comentario_post1
    FOREIGN KEY (post_idPost)
    REFERENCES post (id)
    ON DELETE CASCADE
    ON UPDATE CASCADE
) ENGINE=InnoDB;

CREATE TABLE listSeguido (
  seguidor_id INT NOT NULL,
  seguido_id INT NOT NULL,
  PRIMARY KEY (seguidor_id, seguido_id),
  INDEX fk_listSeguido_seguido_idx (seguido_id ASC) VISIBLE,
  INDEX fk_listSeguido_seguidor_idx (seguidor_id ASC) VISIBLE,
  CONSTRAINT fk_listSeguido_seguidor
    FOREIGN KEY (seguidor_id)
    REFERENCES perfil (usuario_id)
    ON DELETE CASCADE
    ON UPDATE CASCADE,
  CONSTRAINT fk_listSeguido_seguido
    FOREIGN KEY (seguido_id)
    REFERENCES perfil (usuario_id)
    ON DELETE CASCADE
    ON UPDATE CASCADE
) ENGINE=InnoDB;

SET SQL_MODE=@OLD_SQL_MODE;
SET FOREIGN_KEY_CHECKS=@OLD_FOREIGN_KEY_CHECKS;
SET UNIQUE_CHECKS=@OLD_UNIQUE_CHECKS;
